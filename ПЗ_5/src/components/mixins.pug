mixin createGraph(valueX, result)
    details
        summary График
        form
            h3 Значение по оси X
            each value, index in valueX
                input(type="radio" name="graph" value= index)
                span= value
            h3 Результат
            each value, index in result
                input(type="checkbox" name="result" value= index)
                span= value
            input(type="submit")

mixin createFilt(filt)
    details
        summary Фильтр
        form
            - for (var i = 0; i < 3; i++)
                each value, key in filt[i]
                    span= key
                    input(type="text" name= value)
                    br
            - for (var i = 3; i < 5; i++)
                each value, key in filt[i]
                    span= key
                    input(type="number" min= value[0] max= value[1])
                    br
            input(type="submit")

mixin createSort(sortLevels, sortCat)
    details
        summary Сортировка
        form
            each valueL, indexL in sortLevels
                span= valueL
                select(name=`level_${indexL}`)
                    each value, index in sortCat
                        option(value= index)= value
                span  По убыванию?
                label 
                    input(type="checkbox" name=`level_${indexL + 1}_yb` value="3")
                br