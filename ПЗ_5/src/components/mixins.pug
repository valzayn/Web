mixin createMenu(selected)
    .menu
        - var k = 1
        each url, name in data["menu"][0]
            .menu__button
                if k != selected
                    a(class="menu__button__url" href= url)= name
                else
                    div(class="menu__button menu__button_selected")
                        a(class="menu__button__url" href= url)= name
            - k++

mixin createGallery(fileList)
    .gallery
        .gallery_left
            -for (var i = 0; i < 2; i++)
                img(src= require(`../images/${fileList[i]}.jpg`))
        .gallery_right
            -for (var i = 2; i < 5; i++)
                if i == 3   
                    img(class='tall', src= require(`../images/${fileList[i]}.jpg`))
                else
                    img(src= require(`../images/${fileList[i]}.jpg`))

mixin createCatalog
    .catalog
        - for (var i = 0; i < 4; i++)
            if i == 0
                +createSingle(data["films"][i]["title"], data["films"][i]["file"], data["films"][i]["color"], data["films"][i]["descr"])
                - continue
            if i % 2 == 0
                +createFilmLeft(data["films"][i]["title"], data["films"][i]["file"], data["films"][i]["color"], data["films"][i]["descr"])
            else
                +createFilmRight(data["films"][i]["title"], data["films"][i]["file"], data["films"][i]["color"], data["films"][i]["descr"])
mixin createNewsBlock
    .news
        - for (var i = 0; i < 4; i++)
            +createNews(data["news"][i]["title"], data["news"][i]["file"], data["news"][i]["descr"])

mixin createTable(tableHead, table)
        table(border="1", cellpadding="10", cellspacing="0").table
            thead
                tr
                    each key in tableHead
                        th= key
            tbody
                each film in table
                    tr
                    each value, key in film
                        td= value
